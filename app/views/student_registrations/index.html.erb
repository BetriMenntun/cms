<h1>Listing Student Registrations</h1>

<table class="table table-bordered table-hover table-sm">
  <thead>
    <tr>
      <th>User</th>
      <th>Seminar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_registrations.each do |student_registration| %>
      <tr>
        <td><%= student_registration.user.try(:email) %></td>
        <td><%= student_registration.seminar.try(:name) %></td>
        <td><%= link_to 'Show', student_registration %></td>
        <td><%= link_to 'Edit', edit_student_registration_path(student_registration) %></td>
        <td><%= link_to 'Destroy', student_registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

